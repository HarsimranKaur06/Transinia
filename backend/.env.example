# OpenAI API Key - Required for LLM processing
OPENAI_API_KEY=your_openai_api_key_here

# AWS Credentials - Required for S3 and DynamoDB access
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1

# Environment setting - dev, test, or prod
ENVIRONMENT=dev

# S3 Configuration - Replace with your bucket names
S3_BUCKET_RAW=your-raw-transcripts-bucket
S3_BUCKET_PROCESSED=your-processed-outputs-bucket

# Logging level - DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# DynamoDB Configuration - Replace with your table names
USE_DYNAMODB=true
DYNAMODB_TABLE_MEETINGS=your-meetings-table
DYNAMODB_TABLE_ACTIONS=your-actions-table

# Sentry DSN (optional) - For error tracking
# SENTRY_DSN=your_sentry_dsn_here
