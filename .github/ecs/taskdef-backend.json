{
  "family": "transinia-backend-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "${ECS_EXECUTION_ROLE_ARN}",
  "taskRoleArn": "${ECS_TASK_ROLE_ARN}",
  "containerDefinitions": [
    {
      "name": "meeting-bot",
      "image": "REPLACE_WITH_IMAGE",
      "essential": true,
      "portMappings": [ { "containerPort": 8001, "protocol": "tcp" } ],
      "environment": [
        { "name": "ENVIRONMENT", "value": "${ENVIRONMENT}" },
        { "name": "USE_DYNAMODB", "value": "true" },
        { "name": "AWS_REGION", "value": "${AWS_REGION}" },
        { "name": "DYNAMODB_TABLE_MEETINGS", "value": "${DYNAMODB_TABLE_MEETINGS}" },
        { "name": "DYNAMODB_TABLE_ACTIONS", "value": "${DYNAMODB_TABLE_ACTIONS}" },
        { "name": "AWS_ACCESS_KEY_ID", "value": "${AWS_ACCESS_KEY_ID}" },
        { "name": "AWS_SECRET_ACCESS_KEY", "value": "${AWS_SECRET_ACCESS_KEY}" },
        { "name": "OPENAI_API_KEY", "value": "${OPENAI_API_KEY}" },
        { "name": "S3_BUCKET_RAW", "value": "${S3_BUCKET_RAW}" },
        { "name": "S3_BUCKET_PROCESSED", "value": "${S3_BUCKET_PROCESSED}" },
        { "name": "LOG_LEVEL", "value": "INFO" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/transinia-dev-backend",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8001/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 10
      }
    }
  ]
}
